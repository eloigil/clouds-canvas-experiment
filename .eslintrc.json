{
    "extends": "standard",
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "document": false,
      "window": false,
      "console": false,
      "Animation": false,
      "RenderEngine": false,
      "Cloud": false
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }